.check-title {
	font-size 30px
	font-family Comic Sans MS, Comic Sans, cursive
}

.check-result {
	display flex
	justify-content space-between
	width 600px
	margin-top 20px
}

.check-count-txt {
	font-family Andale Mono, monospace
	font-size 18px
	margin-bottom 10px
}

.check-count-num {
	font-family Andale Mono, monospace
	font-size 40px
}

.check-count-block {
	display flex
	justify-content space-between
	align-items center
	width 58px
}

.check-tb-pos {
	margin-top 30px
}

.check-td td {
	min-width 150px
	max-width 800px
	padding-bottom 30px
	font-size 17px
}

.check-row {
	cursor pointer
}

.check-row:hover {
	background-color #ececec
}

.check-start {
	border none
	border 1px solid black
	background-color white
	padding 5px 10px 5px 10px
	border-radius 10px 
	cursor pointer
	display flex
	flex-direction row
	align-items center
	font-weight bolder

}

.check-start:hover {
	opacity 0.8
}

.check-time {
	margin-left 10px
	font-size 16px
	font-weight bolder
}

.check-last-time {
	font-size 14px
	margin-top 10px
	color #1976d2
}

.check-th th {
	background-color #d1dfe8
}

.check-script {
	width 800px
	height 100px
	font-size 16px
	border 1px #d0d6dc solid
	padding 10px
	overflow auto
}

.check-result-tb td {
	border-bottom 1px solid rgba(224, 224, 224, 1)
	padding-bottom 0
	padding 10px
	color red
}

.check-result-tr th {
	padding 10px
}

.check-render {
	position absolute
	display flex
	justify-content center
	align-items center
	width 100%
	height 100vh
	top 0
	left 0
}

.check-risk-rank {
	display flex
	flex-direction column 
	justify-content space-between
	margin-top 30px
}

.check-risk-progress-individual {
	display flex 
	justify-content space-between
	align-items flex-end
	margin-bottom 5px
}

.check-risk-rank-label {
	font-family Andale Mono, monospace
	min-width 150px
}

.check-home-btn {
	text-decoration none
	color black
	padding 3px
}

.check-home-btn:hover {
	transform scale(1.2)
}

progress {
	background white
	appearance none /* 設置iOS下清除灰色背景 */
	-webkit-appearance none
}

/* 設置進度條顏色 */
.high progress::-webkit-progress-value {
	background red
	border-radius 20px
	height 10px
}

.medium progress::-webkit-progress-value {
	background orange
	border-radius 20px
	height 10px
}

.low progress::-webkit-progress-value {
	background #1565c0
	border-radius 20px
	height 10px
}

/* 設置進度條背景顏色 */
progress::-webkit-progress-bar {
	background white
}